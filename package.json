{
  "name": "huroof",
  "version": "1.0.1",
  "type": "module",
  "description": "Lightweight Arabic number and date formatters",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./numbers": {
      "types": "./dist/numbers/index.d.ts",
      "import": "./dist/numbers/index.js",
      "require": "./dist/numbers/index.cjs"
    },
    "./dates": {
      "types": "./dist/dates/index.d.ts",
      "import": "./dist/dates/index.js",
      "require": "./dist/dates/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "arabic",
    "formatters",
    "numbers",
    "dates",
    "hijri",
    "tafgeet",
    "typescript"
  ],
  "author": "Mohamed Shaban",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Moshaban09/huroof"
  },
  "homepage": "https://github.com/Moshaban09/huroof",
  "bugs": {
    "url": "https://github.com/Moshaban09/huroof/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "ajv": "^6.12.6",
    "eslint": "^9.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}

